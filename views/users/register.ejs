<%- layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mb-4">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-center">
                    Sign Up
                </h5>
                <img src="https://images.unsplash.com/photo-1476041800959-2f6bb412c8ce?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTN8fGNhbXBncm91bmR8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
                    alt="Card Image" class="card-img-top">
                <form action="/register" method="post" class="form-validate mt-3" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Oops...
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Oops...
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Oops...
                        </div>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-success">
                            Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>