<%= layout('layouts/boilerplate') %> 
<form action="/campgrounds" method="post">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 class="text-center">
                Create A New Campground
            </h1>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" rows="5" cols="5" name="campground[description]"></textarea>
            </div>
            <button class="btn btn-success">
                Create
            </button>
        </div>
    </div>
</form>
