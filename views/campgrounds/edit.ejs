<%= layout('layouts/boilerplate') %> 
<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" novalidate>
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 class="text-center">
                Edit A Campground
            </h1>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%= camp.title %>" required>
                <div class="valid-feedback">
                    <%= validFeedback[Math.floor(Math.random() * validFeedback.length)] %>
                </div>
                <div class="invalid-feedback">
                    <%= invalidFeedback[Math.floor(Math.random() * invalidFeedback.length)] %>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%= camp.location %>" required>
                <div class="valid-feedback">
                    <%= validFeedback[Math.floor(Math.random() * validFeedback.length)] %>
                </div>
                <div class="invalid-feedback">
                    <%= invalidFeedback[Math.floor(Math.random() * invalidFeedback.length)] %>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]" value="<%= camp.image %>">
                <div class="valid-feedback">
                    <%= validFeedback[Math.floor(Math.random() * validFeedback.length)] %>
                </div>
                <div class="invalid-feedback">
                    <%= invalidFeedback[Math.floor(Math.random() * invalidFeedback.length)] %>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1" value="<%= camp.price %>" required>
                    <div class="valid-feedback">
                        <%= validFeedback[Math.floor(Math.random() * validFeedback.length)] %>
                    </div>
                    <div class="invalid-feedback">
                        <%= invalidFeedback[Math.floor(Math.random() * invalidFeedback.length)] %>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" rows="5" cols="5" name="campground[description]" required><%= camp.description %> </textarea>
                <div class="valid-feedback">
                    <%= validFeedback[Math.floor(Math.random() * validFeedback.length)] %>
                </div>
                <div class="invalid-feedback">
                    <%= invalidFeedback[Math.floor(Math.random() * invalidFeedback.length)] %>
                </div>
            </div>
            <button class="btn btn-success">
                Save changes
            </button>
            <a href="/campgrounds/<%= camp._id %> "class="btn btn-info">Go back</a>
        </div>
    </div>
</form>
